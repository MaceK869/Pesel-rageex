<script>

function miernik() {
var pesel=document.getElementById("pesel").value; 
if (pesel.length<=10) 
document.getElementById("pesel").style.backgroundColor="red";

 if (pesel.length==11)
document.getElementById("pesel").style.backgroundColor="green";



if (pesel.length>=12)
document.getElementById("pesel").style.backgroundColor="red";
}
</script>
